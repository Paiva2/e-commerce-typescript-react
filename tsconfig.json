{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": ["es6", "dom", "es2017"],
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "public"]
}
